<h2>ðŸ“¦ Dashboard Prediksi Stok Gudang</h2>
<hr>
<a href="/add" class="btn btn-add" style="margin-bottom: 15px;">+ Tambah Barang Baru</a>

<table>
    <thead>
        <tr>

            <th>Nama Barang</th>
            <th>Kategori</th>
            <th>Stok Awal</th>
            <th>Terjual</th>
            <th>Sisa Stok</th>
            <th>Status Prediksi</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% dataHasil.forEach(item => { %>
            <tr>
                <td><%= item.nama %></td>
                <td>
    <% if (item.kategori_id == 1) { %>
        <span style="color: blue;">Elektronik</span>
    <% } else if (item.kategori_id == 2) { %>
        <span style="color: brown;">Furniture</span>
    <% } else if (item.kategori_id == 3) { %>
        <span style="color: purple;">Aksesoris</span>
    <% } else { %>
        -
    <% } %>
</td>
                <td><%= item.stok_awal %></td>
                <td><%= item.terjual %></td>
                <td><b><%= item.sisa_stok %></b></td>
                <td style="color: <%= item.warna_status %>; font-weight: bold;">
                    <%= item.status_barang %>
                </td>
                <td>
                    <a href="/edit/<%= item.id %>" class="btn btn-edit">Edit</a>
                    <a href="/delete/<%= item.id %>" class="btn btn-del" onclick="return confirm('Yakin mau hapus?')">Hapus</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>